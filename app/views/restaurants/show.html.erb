<h1><%= @restaurant.name %></h1>
<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %>/5</li>
  <% end %>
</ul>
<br>
<p><%= link_to "All restaurants", restaurants_path, class: "btn btn-primary" %></p>
<p><%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
