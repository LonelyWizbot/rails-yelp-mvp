<h1>New restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, label: 'Choose between chinese, italian, japanese, french, belgian', error: 'Wrong category' %>
  <%= f.submit %>
<% end %>
<p><%= link_to "All restaurants", restaurants_path, class: "btn btn-primary" %></p>
